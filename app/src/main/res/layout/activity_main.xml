<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_calc"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/logoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:text="@irada.vip"
            android:textAlignment="center"
            android:textColor="#C59C23"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/inputView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textSize="60sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button

            android:id="@+id/c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#8FB167"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#BA607E"
            android:text="Backspace"
            android:textSize="20dp">

        </Button>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/number7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#558CB8"
            android:shadowColor="#37272525"
            android:text="7"
            android:textSize="24dp">

        </Button>

        <Button
            android:id="@+id/number8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#558CB8"
            android:text="8"
            android:textSize="24dp">

        </Button>


        <Button
            android:id="@+id/number9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#558CB8"
            android:text="9"
            android:textSize="24dp">

        </Button>

        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#BA607E"
            android:text="/"
            android:textSize="24dp">

        </Button>

        <Button
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#BA607E"
            android:text="%"
            android:textSize="24dp">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/number4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#558CB8"
            android:text="4"
            android:textSize="24dp">

        </Button>

        <Button
            android:id="@+id/number5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#558CB8"
            android:text="5"
            android:textSize="24dp">

        </Button>


        <Button
            android:id="@+id/number6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#558CB8"
            android:text="6"
            android:textSize="24dp">

        </Button>

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#BA607E"
            android:text="-"
            android:textSize="24sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/multiplication"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#BA607E"
            android:text="x"
            android:textSize="24dp">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/number1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#558CB8"
            android:text="1"
            android:textSize="24dp">

        </Button>

        <Button
            android:id="@+id/number2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#558CB8"
            android:text="2"
            android:textSize="24dp">

        </Button>


        <Button
            android:id="@+id/number3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="#558CB8"
            android:text="3"
            android:textSize="24dp">

        </Button>

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2.05"
            android:width="0dp"
            android:backgroundTint="#8FB167"
            android:text="+"
            android:textSize="24sp">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/doubleZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#558CB8"
            android:text="00"
            android:textSize="24dp">

        </Button>

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#558CB8"
            android:text="0"
            android:textSize="24dp">

        </Button>

        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:width="0dp"
            android:backgroundTint="#BA607E"
            android:text="."
            android:textSize="24sp">

        </Button>

        <Button
            android:id="@+id/enter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2.05"
            android:width="0dp"
            android:backgroundTint="#BA607E"
            android:text="="
            android:textSize="24dp">

        </Button>


    </LinearLayout>

</LinearLayout>














